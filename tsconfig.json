{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  },
  "exclude": [
    "node_modules"
  ]
}
